{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES6",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "../../node_modules"
  ],
  "include": [
    "index.ts",
    "src/**/*"
  ]
}